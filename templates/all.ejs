<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!--usar o bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Font Awesome (usado para ter os icones do footer)-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css"/>

    <title>Lista de dados</title>
</head>
<body class="bg-light">

    <header class="navbar navbar-dark bg-primary">
        <div class="navbar-brand fw-bold mx-4">LinkEngag</div>  
        
        <div class="nav">
           <a class="nav-link m-1 btn-sm text-dark" href="/add">Adicionar dados</a>
           <a class="nav-link m-1 btn-sm text-dark" href="/">Lista de dados</a>
        </div>
    </header>
  
    <main class="container">
    
        <h3 class="mt-5 text-center fw-bold">LISTA COM TODOS OS DADOS DO SISTEMA</h3>
    
        <% for(let i=0; i< dados.length; i++){%>
            <div class="card bg-dark m-2 p-4"><%dados[i]._id%>
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex flex-column">
                            <h1 class="text-muted fw-bold"><%=dados[i].title%></h1>
                            <div class="text-white"><%=dados[i].description%></div>
                            <div class="text-white"><%=dados[i].url%></div>
                            <div class="text-info"> Clicks: <%=dados[i].click%></div>
                        </div>
                        <div class="d-flex flex-column">
                            <a class="m-2 btn btn-info" href="/edit/<%=dados[i]._id%>">Editar</a>
                            <button class="m-2 btn btn-danger" onclick="removerEdeleta_Dado ('<%=dados[i]._id%>')">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        <%}%>
    </main>
    
    <footer class="fixed-bottom bg-dark text-center text-white">

    <div class="container p-2 pb-0">
        <section class="mb-4">
            <!-- Facebook -->
            <a class="btn btn-outline-light btn-floating m-1" href="https://facebook.com/fabio.amorim.988"
                role="button"><i class="fab fa-facebook-f"></i></a>
            <!-- Instagram -->
            <a class="btn btn-outline-light btn-floating m-1" href="https://instagram.com/Fabioamorim20"
                role="button"><i class="fab fa-instagram"></i></a>
            <!-- Linkedin -->
            <a class="btn btn-outline-light btn-floating m-1" href="https://linkedin.com/in/fabio-amorim-4545011a1"
                role="button"><i class="fab fa-linkedin-in"></i></a>
            <!-- Github -->
            <a class="btn btn-outline-light btn-floating m-1" href="https://github.com/fabioamorim25" role="button"><i
                    class="fab fa-github"></i></a>
        </section>
    </div>
    <!-- Copyright -->
    <div class="text-center p-2" style="background-color: rgba(0, 0, 0, 0.2);">
        Â© 2022 Copyright:
        <a class="text-white" href="#">AmorimPG.com</a>
    </div>
    </footer>



</body>

<script>

    function removerEdeleta_Dado(id){
        fetch('/'+id, { method: 'DELETE'}).then(res=>{
            if (res.status == 200){
                res.text().then(dadoId=>{
                document.getElementById(dadoId).remove();    
            })
            }else{
                res.json().then(err=>{
                    alert(err.message);
                    console.log(err.message);
                })
            }  
        })
    }
    
</script>


</html>