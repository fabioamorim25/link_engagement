<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--usar o bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Lista de dados</title>
</head>
<body class="bg-light">
    
    <!-- colocar aqui o tamplete do cabeçalho [navbar.ejs] -->
    <%- include('partials/navbar.ejs')%>

    <main class="container">
    
        <h3 class="mt-5 text-center fw-bold">LISTA COM TODOS OS DADOS DO SISTEMA</h3>
    
        <% for(let i=0; i< dados.length; i++){%>
            <div class="card bg-dark m-2 p-4"><%dados[i]._id%>
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex flex-column">
                            <h1 class="text-muted fw-bold"><%=dados[i].title%></h1>
                            <div class="text-white"><%=dados[i].description%></div>
                            <div class="text-white"><%=dados[i].url%></div>
                            <div class="text-info"> Clicks: <%=dados[i].click%></div>
                        </div>
                        <div class="d-flex flex-column">
                            <a class="m-2 btn btn-info" href="/edit/<%=dados[i]._id%>">Editar</a>
                            <button class="m-2 btn btn-danger" onclick="removerEdeleta_Dado ('<%=dados[i]._id%>')">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        <%}%>
    </main>

     <!-- colocar aqui o tamplete do rodapé [footer.ejs] -->
     <%- include('partials/footer.ejs')%>

</body>


<script>

    function removerEdeleta_Dado(id){
        fetch('/'+id, { method: 'DELETE'}).then(res=>{
            if (res.status == 200){
                res.text().then(dadoId=>{
                document.getElementById(dadoId).remove();
        })
            }else{
                res.json().then(err=>{
                    alert(err.message);
                    console.log(err.message);
                })
            }  
        })
    }
    
</script>


</html>