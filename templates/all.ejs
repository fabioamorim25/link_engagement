<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!--usar o bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    
    <title>mostra todos os dados</title>
</head>
<body>


    <% for(let i=0; i< dados.length; i++){%>
        <div id='<%=dados[i]._id%>'>
            
            <h1> <%=dados[i].title%> </h1>
            <div> <%=dados[i].description%> </div>
            <div> <%=dados[i].url%> </div>
            <div> clicks: <%=dados[i].click%> </div> 
            
            <a href="/edit/<%=dados[i]._id%>">Editar</a>
            <button onclick="removerEdeleta_Dado ('<%=dados[i]._id%>')" >Delete</button>
        </div>
    <%}%>



<script>

    function removerEdeleta_Dado(id){
        fetch('/'+id, { method: 'DELETE'}).then(res=>{
            if (res.status == 200){
                res.text().then(dadoId=>{
                document.getElementById(dadoId).remove();
                })
            }else{
                res.json().then(err=>{
                    alert(err.message);
                    console.log(err.message);
                })
            }  
        })
    }
    
</script>




</body>
</html>